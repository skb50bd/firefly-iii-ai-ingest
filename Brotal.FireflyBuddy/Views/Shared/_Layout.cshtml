<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="AI-powered financial transaction analyzer for Firefly-III" />
    <meta name="keywords" content="firefly-iii, finance, ai, transactions, budgeting" />
    <meta name="author" content="Firefly Buddy" />
    <title>@ViewData["Title"] - Firefly Buddy</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ”¥</text></svg>">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <div class="sidebar-logo-icon">ðŸ”¥</div>
                    <div class="sidebar-logo-text">Firefly Buddy</div>
                </div>
                <div class="sidebar-user">admin@fireflybuddy.com</div>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="@Url.Action("Index", "Home")" class="nav-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="bi bi-house nav-item-icon"></i>
                        Dashboard
                    </a>
                    <a href="@Url.Action("Index", "Messages")" class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")">
                        <i class="bi bi-chat-text nav-item-icon"></i>
                        Messages
                    </a>
                    <a href="@Url.Action("Index", "Drafts")" class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Drafts" ? "active" : "")">
                        <i class="bi bi-file-earmark-text nav-item-icon"></i>
                        Drafts
                    </a>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">System</div>
                    <a href="/tickerq" target="_blank" class="nav-item">
                        <i class="bi bi-gear nav-item-icon"></i>
                        Jobs Dashboard
                    </a>
                    <a href="/scalar/v1" target="_blank" class="nav-item">
                        <i class="bi bi-gear nav-item-icon"></i>
                        API Dashboard
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <div class="nav-section">
                    <a href="#" class="nav-item">
                        <i class="bi bi-gear nav-item-icon"></i>
                        Settings
                    </a>
                    <a href="#" class="nav-item">
                        <i class="bi bi-question-circle nav-item-icon"></i>
                        Help Center
                    </a>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Bar -->
            <div class="top-bar">
                <div class="top-bar-left">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                <div class="top-bar-right">
                    <button class="theme-toggle" onclick="toggleTheme()">
                        <i class="bi bi-sun" id="theme-icon"></i>
                    </button>
                </div>
            </div>

            <!-- Alerts -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                </div>
            }

            <!-- Page Content -->
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

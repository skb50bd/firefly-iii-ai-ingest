@model Brotal.FireflyBuddy.Controllers.DraftsIndexViewModel
@{
    ViewData["Title"] = "Transaction Drafts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-file-earmark-text"></i> Transaction Drafts</h2>
    <div>
        <a href="@Url.Action("Index", "Messages")" class="btn btn-outline-primary me-2">
            <i class="bi bi-chat-text"></i> View Messages
        </a>
    </div>
</div>

@if (Model.Drafts.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Type</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var draft in Model.Drafts)
                        {
                            <tr>
                                <td>
                                    <div class="text-truncate" style="max-width: 250px;" title="@draft.Description">
                                        @draft.Description
                                    </div>
                                </td>
                                <td>
                                    <span class="text-success fw-bold">@draft.Amount.ToString("C")</span>
                                    <small class="text-muted">@draft.CurrencyCode</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@draft.Type</span>
                                </td>
                                <td>
                                    <small>@draft.Date.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <span class="badge bg-@GetDraftStatusColor(draft.Status)">@draft.Status</span>
                                </td>
                                <td>
                                    <small class="text-muted">@draft.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = draft.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (draft.Status == Brotal.FireflyBuddy.Data.DraftStatus.Pending || draft.Status == Brotal.FireflyBuddy.Data.DraftStatus.Ready)
                                        {
                                            <a href="@Url.Action("Edit", new { id = draft.Id })" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    @if (Model.CurrentPage > 1 || Model.Drafts.Count == Model.PageSize)
    {
        <nav aria-label="Drafts pagination">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Previous</a>
                    </li>
                }
                <li class="page-item active">
                    <span class="page-link">@Model.CurrentPage</span>
                </li>
                @if (Model.Drafts.Count == Model.PageSize)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="card">
        <div class="card-body text-center">
            <i class="bi bi-file-earmark-text display-1 text-muted"></i>
            <h4 class="mt-3">No drafts yet</h4>
            <p class="text-muted">Drafts will be created automatically when messages are processed and identified as transactions.</p>
            <a href="@Url.Action("Index", "Messages")" class="btn btn-primary">
                <i class="bi bi-chat-text"></i> View Messages
            </a>
        </div>
    </div>
}

@functions {
    string GetDraftStatusColor(Brotal.FireflyBuddy.Data.DraftStatus status)
    {
        return status switch
        {
            Brotal.FireflyBuddy.Data.DraftStatus.Pending => "warning",
            Brotal.FireflyBuddy.Data.DraftStatus.Ready => "success",
            Brotal.FireflyBuddy.Data.DraftStatus.Submitted => "info",
            Brotal.FireflyBuddy.Data.DraftStatus.Failed => "danger",
            Brotal.FireflyBuddy.Data.DraftStatus.Cancelled => "secondary",
            _ => "secondary"
        };
    }
}
